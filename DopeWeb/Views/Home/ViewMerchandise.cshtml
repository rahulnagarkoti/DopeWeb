    <div id="container" class="container">

        <section id="pricing" class="pricing">
            <div class="container">

                <div class="section-title">
                    <h2>Merchandise</h2>
                </div>

                <div id="mainDiv">


                </div>

            </div>
        </section><!-- End Pricing Section -->
