    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $(document).ready(function () {

            var products = [];
            var html = '';
            $.ajax(
                {
                    url: "/Home/GetProducts",
                    method: "GET",
                    async: false,
                    success: function (result) {
                        products = result;
                    },
                    complete: function (res) {
                        populateData();
                    }

                })

            function populateData() {
                html = "<div class='row'>";''
                $.each(products, function (k, v) {
                    var image = v['imageURL'];
                    var name = v['name'];
                    var price = v['price'];
                    var code = v['code'];
                    var id = v['id'];

                    var temp = `
                    <div class="col-lg-3 col-md-6">
                        <div class="box">
                            <img src="../product-images/${image}" class="img-cls" alt="Image">
                            <h4><sup>$</sup>${price}</h4>
                            <b>${name}</b>
                            <div class="btn-wrap">
                                <button type="button"  id="${id}" class="btn-cls addToCart">Add To Cart</button>
                            </div>
                        </div>
                    </div>`;

                    html = html.concat(temp);
                });
                html = html.concat('</div>')
                $("#mainDiv").append(html);
            }
        });


        $(document.body).on('click', '.addToCart', function () {
            var id = this.id;        
            $.ajax(
                {
                    url: "/Home/AddToCart",
                    method: "POST",
                    data: { id: id, quantity: 1 },
                    success: function (result)
                    {
                        alert("Product Added Successfully to Cart!");
                    }
                })
        })

    

    </script>
